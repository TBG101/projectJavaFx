    <HBox spacing="10" alignment="CENTER">
        <Button text="Reservations" onAction="#handleReservationsButtonAction" />
        <Button text="Rooms" onAction="#handleRoomsAction" />
        <Button text="Customers" onAction="#handleCustomerAction" />
        <Button text="Payment" onAction="#handlePaymentAction" />
    </HBox>
</VBox>